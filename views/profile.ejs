<% include ./partials/header.ejs%>

<link rel="stylesheet" href="../stylesheets/profile.css">

<body>
     <form id="prflfrm" style="display: none;" action="/uploadit" method="POST" enctype="multipart/form-data">
    <input id="prflinpt" type="file" name="profileimage">
    </form>

   
    <div id="container">
        <div id="dets">
            <div id="image">
                <img src=<%= founduser.profileimage %> alt="">
            </div>
            <div id="txt">
                <h2><%= founduser.name %></h2>
                <button id="btn">change image</button>
            </div>
        </div>
        <div id="form">
            <h2>Make new car selling listing.</h2>
            <form action="/addcar" method="POST" enctype="multipart/form-data">
                <input type="text" placeholder="car's price" name="carsprice">
                <input type="text" placeholder="car's name" name="carsname">
                <input type="text" placeholder="contact" name="contact">
                <input type="file" name="carimage">
                <input type="submit">
            </form>
        </div>
        <div id="posts">
            <h3>Your Previous Entries</h3>
           <% founduser.cars.reverse().forEach(function(car){ %>
            <div class="post">
                <img src= <%= car.carimg %> alt="some image">
                <h3><%= car.carname %></h3>
                <h3><%= car.carprice %></h3>
                <a href=<%= 'tel:'+car.contact %>>call me </a>
            </div>
          <% }) %>

        </div>
    </div>
    <script>
        document.querySelector('#btn').addEventListener('click',function(){
            document.querySelector('#prflinpt').click();
        })
     document.querySelector('#prflinpt').addEventListener('change' , function(){
         document.querySelector('#prflfrm').submit();
     })

    </script>
<% include ./partials/footer.ejs%>